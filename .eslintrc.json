{
  "extends": ["@balsamic"],
  "plugins": ["jest", "node", "import"],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "globalReturn": false,
      "generators": true,
      "objectLiteralDuplicateProperties": false
    },
    "sourceType": "module"
  },
  "rules": {
    "global-require": 0
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "@typescript-eslint/no-throw-literal": 0
      }
    },
    {
      "files": ["index.js"],
      "rules": {
        "node/no-unpublished-require": 0
      }
    }
  ]
}
