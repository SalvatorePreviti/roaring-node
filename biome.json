{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/.husky/_/**/*",
      "!**/.tmp/**/*",
      "!**/src/cpp/**/*",
      "!**/build/**/*",
      "!**/docs/**/*",
      "!**/native/**/*",
      "!**/node_modules/**/*",
      "!**/submodules/**/*",
      "!**/package-lock.json",
      "!**/.clang-tidy"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "lineWidth": 120,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineEnding": "lf",
    "bracketSpacing": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {},
      "suspicious": {
        "noConsole": "off",
        "noUnsafeDeclarationMerging": "off",
        "noExplicitAny": "off"
      }
    }
  }
}
